{
    "name": "monocart-reporter",
    "version": "1.6.21",
    "description": "A playwright test reporter. Shows suites/cases/steps with tree style, markdown annotations, custom columns/formatters/data collection visitors, console logs, style tags, send email, testrail integration.",
    "main": "lib/index.js",
    "bin": {
        "monocart": "lib/cli.js"
    },
    "exports": {
        ".": {
            "import": "./lib/index.mjs",
            "require": "./lib/index.js",
            "default": "./lib/index.js"
        },
        "./cli": "./lib/cli.js",
        "./package.json": "./package.json"
    },
    "scripts": {
        "test": "node ./scripts/link.js && npx playwright test -c tests",
        "build": "sf lint && sf b -p",
        "dev": "sf d -w .temp/monocart/index.json",
        "patch": "npm run build && sf publish patch -r",
        "pack": "sf pack -o docs -q v={version} && nmls -p",
        "mock-download": "node ./scripts/mock-download.js",
        "mock-serve": "node ./scripts/mock-serve.js"
    },
    "workspaces": [
        "packages/*"
    ],
    "files": [
        "lib"
    ],
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/cenfun/monocart-reporter.git"
    },
    "dependencies": {
        "console-grid": "^2.0.1",
        "eight-colors": "^1.0.3",
        "istanbul-reports": "^3.1.5",
        "koa": "^2.14.2",
        "koa-static-resolver": "^1.0.4",
        "lz-utils": "^2.0.1",
        "open": "^9.1.0"
    },
    "devDependencies": {
        "@babel/code-frame": "^7.21.4",
        "@babel/parser": "^7.21.8",
        "@codemirror/lang-css": "^6.2.0",
        "@codemirror/lang-javascript": "^6.1.7",
        "@codemirror/view": "^6.11.0",
        "@playwright/test": "^1.33.0",
        "@slack/web-api": "^6.8.1",
        "@slack/webhook": "^6.1.0",
        "ansi-to-html": "^0.7.2",
        "async-tick": "^1.0.0",
        "axios": "^1.4.0",
        "codemirror": "^6.0.1",
        "dotenv": "^16.0.3",
        "eslint": "^8.40.0",
        "eslint-config-plus": "^1.0.6",
        "eslint-plugin-html": "^7.1.0",
        "eslint-plugin-vue": "^9.11.1",
        "file-saver": "^2.0.5",
        "form-data": "^4.0.0",
        "fps-detector": "^1.0.3",
        "github-markdown-css": "^5.2.0",
        "istanbul-lib-coverage": "^3.2.0",
        "istanbul-lib-report": "^3.0.0",
        "jira-client": "^8.2.2",
        "lighthouse": "^10.2.0",
        "marked": "^5.0.1",
        "nice-ticks": "^1.0.2",
        "nodemailer": "^6.9.1",
        "playwright": "^1.33.0",
        "stack-utils": "^2.0.6",
        "stylelint": "^15.6.1",
        "stylelint-config-plus": "^1.0.3",
        "testrail-api": "^1.3.6",
        "turbogrid": "^3.0.7",
        "v8-to-istanbul": "^9.1.0",
        "vine-ui": "^3.1.11"
    }
}
